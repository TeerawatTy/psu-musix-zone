// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                Int                  @id @default(autoincrement())
  username          String               @unique
  email             String               @unique
  password          String
  role              String               // Changed from enum to string
  bookings          RoomReservation[]
  borrowRequests    BorrowRequest[]
}

model RoomReservation {
  id                 Int                @id @default(autoincrement())
  user               User               @relation(fields: [userId], references: [id])
  userId            Int
  room              PracticeRoom        @relation(fields: [roomId], references: [id])
  roomId           Int
  reservation_date   DateTime
  start_time         DateTime
  end_time           DateTime
}

model BorrowRequest {
  id                  Int                @id @default(autoincrement())
  user                User               @relation(fields: [userId], references: [id])
  userId             Int
  equipment          Equipment           @relation(fields: [equipmentId], references: [id])
  equipmentId        Int
  borrow_date        DateTime
  return_date        DateTime
  status             String              // Changed from enum to string
  returnStatus       Boolean             @default(false)
}

model PracticeRoom {
  id                 Int                @id @default(autoincrement())
  room_name          String
  capacity           Int
  roomEquipments     RoomEquipment[]    // Relationship to equipment
  reservations       RoomReservation[]
}

model Equipment {
  id                 Int                @id @default(autoincrement())
  name               String              @unique
  type               String              // Changed from enum to string
  defaultQuantity    Int                 @default(0)
  status             String              // Changed from enum to string
  roomEquipments     RoomEquipment[]
  borrowRequests     BorrowRequest[]     // Back-relation to BorrowRequest
}

model RoomEquipment {
  id                 Int                @id @default(autoincrement())
  room               PracticeRoom       @relation(fields: [roomId], references: [id])
  roomId            Int
  equipment         Equipment          @relation(fields: [equipmentId], references: [id])
  equipmentId       Int
  quantity          Int                // Quantity of this equipment in the room
}
